# Langfuse Configuration for Local Environment

# Database Configuration (use separate database for local development)
LANGFUSE_DATABASE_URL=postgresql://langfuse:langfuse_dev_password@langfuse-db:5432/langfuse_local

# Authentication Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=langfuse_local_secret_for_development_only

# Salt for hashing (development only)
SALT=langfuse_local_salt_for_development

# Server Configuration
NODE_ENV=development
PORT=3000

# Features (enable all features for local development)
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=true

# Disable telemetry in local development
TELEMETRY_ENABLED=false

# CORS Configuration (relaxed for local development)
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8000,http://localhost:3000

# Enable debug logging
DEBUG=langfuse:*

# Local development specific settings
LOG_LEVEL=debug