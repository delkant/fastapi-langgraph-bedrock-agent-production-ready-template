# Langfuse Configuration for Production Environment

# Database Configuration (use production database)
LANGFUSE_DATABASE_URL=postgresql://langfuse:${LANGFUSE_DB_PASSWORD}@langfuse-db:5432/langfuse_prod

# Authentication Configuration
NEXTAUTH_URL=https://your-domain.com/langfuse
NEXTAUTH_SECRET=${LANGFUSE_NEXTAUTH_SECRET}

# Salt for hashing (must be secure in production)
SALT=${LANGFUSE_SALT}

# Server Configuration
NODE_ENV=production
PORT=3000

# Features (disable experimental features in production)
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable telemetry in production (optional)
TELEMETRY_ENABLED=true

# CORS Configuration (strict for production)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Production logging
LOG_LEVEL=warn

# Security headers
SECURE_HEADERS=true